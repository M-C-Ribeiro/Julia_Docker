version: '3'

services:
  web:
    image: python:3.8
    working_dir: /app
    volumes:
      - ./app:/src
    ports:
      - "5050:5050"
    environment:
      - FLASK_APP=app.py
      - FLASK_RUN_HOST=0.0.0.0

    command: >
      sh -c "pip install flask flask_sqlalchemy flask-wtf && flask run"

    depends_on:
      - db
    links:
      - db

  db:
    image: mtsribeiro/sqlite3-image:0.1
    volumes:
      - ./app:/src

